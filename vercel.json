{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/overdue-detection",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/payment-reminders",
      "schedule": "0 9 * * 1"
    }
  ]
}
